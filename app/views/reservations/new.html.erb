<% if @reservation.errors.messages.length > 0  %>
  <div class="errors">
    <% @reservation.errors.messages.each do |attribute, errors| %>
      <p><%= attribute.capitalize %> <%= errors[0].capitalize %></p>
    <% end %>
  </div>
<% end %>

<%= form_for [@restaurant, @reservation] do |f| %>

<%= f.label :date %>
<%= f.date_field :date %>

<%= f.label :time %>
<%= f.time_select :time %>

<%= f.label :partysize %>
<%= f.text_field :partysize %>

<%= f.submit %>

<% end %>
