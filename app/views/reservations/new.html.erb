<h1><%= @restaurant.name %></h1>
<h4>Hours:</h4>
<p>Open <%= @restaurant.open_at %> to <%= @restaurant.close_at %></p>
<div class="reso_page">
  <div class="errors">
    <% @reso.errors.messages.each do |attribute, errors| %>
      <p><%= attribute.capitalize %> <%= errors[0].capitalize %></p>
    <% end %>
  </div>

<%= form_for [@restaurant, @reso] do |f| %>

<%= f.label :date %>
<%= f.date_field :date %>
<br>

<%= f.label :time %>
<%= f.select :time, [["6am", 600], ["6:30am", 630], ["7am", 700], ["7:30am", 730], ["8am", 800], ["8:30am", 830], ["9am", 900], ["9:30am", 930], ["10am", 1000], ["10:30am", 1030], ["11am", 1100], ["11:30am", 1130], ["12pm", 1200], ["12:30pm", 1230], ["1pm", 1300], ["1:30pm", 1330], ["2pm", 1400], ["2:30pm", 1430], ["3pm", 1500], ["3:30pm", 1530], ["4pm", 1600], ["4:30pm", 1630], ["5pm", 1700], ["5:30pm", 1730], ["6pm", 1800], ["6:30pm", 1830], ["7pm", 1900], ["7:30pm", 1930], ["8pm", 2000], ["8:30pm", 2030], ["9pm", 2100], ["9:30pm", 2130], ["10pm", 2200], ["10:30pm", 2230], ["11pm", 2300], ["11:30pm", 2330], ["12am", 2400], ["12:30am", 30], ["1am", 100], ["1:30am", 130], ["2am", 200], ["2:30am", 230], ["3am", 300], ["3:30am", 330], ["4am", 400 ], ["4:30am", 430], ["5am", 500], ["5:30am", 530]] %>
<br>

<%= f.label :partysize %>
<%= f.number_field :partysize %>
<br>


<%= f.submit %>

<% end %>
</div>
